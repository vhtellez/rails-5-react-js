<!DOCTYPE html>
<html>
  <head>
    <title>Mini CRM</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <%= "Hi #{current_user.user_name}" %> |
      <%= link_to 'Dashboard', root_path %> |
      <%= link_to 'Prospects', { controller: 'prospects', action: 'index' } %> |
      <%= link_to 'Opportunities', { controller: 'opportunities', action: 'index' } %> |

      <%= link_to 'Log Out', logout_path, method: :delete %>
    <% else %>
      <%= link_to 'Home', root_path %> | <%= link_to 'Log In', login_path %> or <%= link_to 'Sign Up', new_user_path %>
    <% end %>
    <hr>


    <% if notice %>
      <%= notice %>
    <% end %>

    <% if alert %>
      <%= alert %>
    <% end %>
      <%= yield %>
  </body>
</html>
